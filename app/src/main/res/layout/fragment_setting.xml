<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.SettingFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/color_items"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_language_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/language_white_icon" />


                    <TextView
                        android:id="@+id/tv_description_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/Change_Language"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/arrow_white_icon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#9EFFFFFF"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3">

                    <RadioGroup
                        android:id="@+id/radioGroupLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_Arabic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Arabic"
                            android:textSize="24sp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_English"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/English"
                            android:textSize="24sp" />
                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/color_items"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_location_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/location_white_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/Location"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/arrow_white_icon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#9EFFFFFF"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3">

                    <RadioGroup
                        android:id="@+id/radioGroupLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_Map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Map"
                            android:textSize="24sp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_GPS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/GPS"
                            android:textSize="24sp" />
                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/color_items"
            app:cardCornerRadius="10dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_temperature_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/tem_white_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/Temperature"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/arrow_white_icon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#9EFFFFFF"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3">

                    <RadioGroup
                        android:id="@+id/radioGroupTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_Celsius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Celsius"
                            android:textSize="24sp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_Kelvin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Kelvin"
                            android:textSize="24sp" />
                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/appCompatRadioBtn_Fahrenheit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Fahrenheit"
                            android:textSize="24sp" />
                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/color_items"
            app:cardElevation="50dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/notifications_white_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/Notifications"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/daySwitchCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    app:switchMinWidth="80dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>